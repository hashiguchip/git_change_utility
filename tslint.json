{
  "defaultSeverity": "error",
  "extends": ["tslint-config-standard"],
  "rules": {
    "prefer-const": true,
    "semicolon": [true, "always"],
    "quotemark": [true, "double"],
    "comment-format": [false],
    "space-before-function-paren": [true, "never"]
  },
  "linterOptions": {
    "exclude": ["*.vue"]
  }
}
